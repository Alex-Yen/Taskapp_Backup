<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.job_detail_admin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-1dp"
        android:layout_marginBottom="0dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground">

            <Space
                android:layout_width="match_parent"
                android:layout_height="18sp" />

            <TextView
                android:id="@+id/Usertype00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usertype"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="18sp" />

            <TextView
                android:id="@+id/Username00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="18sp" />

            <TextView
                android:id="@+id/House00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="House"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="18sp" />

            <TextView
                android:id="@+id/House_Area00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="House Area"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="18sp" />

            <TextView
                android:id="@+id/Tenant_tel_no00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tenant tel no"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="18sp" />

            <TextView
                android:id="@+id/Job00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Job"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="18sp" />

            <TextView
                android:id="@+id/Location00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="18sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_image_24" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="18sp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_baseline_image_24" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="18sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_image_24" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="18sp" />

            <ToggleButton
                android:id="@+id/Message00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Unread Task"
                android:textOn="Task seen"
                android:textSize="18sp"
                android:layout_gravity="center"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="18sp" />

            <ToggleButton
                android:id="@+id/Job_Status00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:checked="false"
                android:textOff="Work in Progress"
                android:textOn="Verify job complete"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="18sp" />

            <Button
                android:id="@+id/Edit_but"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="18sp" />

            <Button
                android:id="@+id/Remove_but"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remove" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>